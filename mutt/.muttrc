set pager_index_lines = 10
bind pager k previous-line
bind pager j next-line
bind pager R group-reply

macro pager \Co "|urlview<enter>" "call urlview to open links"

set folder = ~/.mail

set editor = "$EDITOR -c 'set tw=72'"

set alias_file = ~/.mutt/alias
set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
set mailcap_path = ~/.mutt/mailcap
set signature = ~/.mutt/signature

folder-hook github.com/ source ~/.mutt/account/github.com
folder-hook ttaylorr.com/ source ~/.mutt/account/ttaylorr.com

source ~/.mutt/account/github.com

macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/account/github.com<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/account/ttaylorr.com<enter><change-folder>!<enter>'

macro index x "<tag-entry><previous-entry>"

bind index k previous-entry
bind index j next-entry
bind generic,index,pager \Cd half-down
bind generic,index,pager \Cu half-up

macro index I "<clear-flag>N<previous-entry>"
macro pager I "<clear-flag>N<exit>"
macro index U "<set-flag>N<previous-entry>"
macro pager U "<set-flag>N<exit>"

bind index R group-reply

color index brightblue brightwhite ~N
color index brightwhite black ~D

color normal default brightwhite
color hdrdefault brightblue brightwhite
color signature brightyellow brightwhite
color tree brightblue brightwhite

color body brightwhite default ^(diff).*
color body white default ^[\-\-\-].*
color body white default ^[\+\+\+].*
color body green default ^[\+].*
color body red default ^[\-].*
color body brightblue  default [@@].*
color body brightwhite default ^(Signed-off-by).*
color body brightwhite default ^(Cc)

set wait_key = no
set mbox_type = Maildir
set timeout = 3
set mail_check = 0
unset move
set delete
unset confirmappend
set quit
unset mark_old
set beep_new

set sendmail_wait = 0
unset record

set sort = threads
set sort_aux = last-date-received
set sort_re

set realname = "Taylor Blau"

ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:
