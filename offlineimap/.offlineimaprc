[general]
accounts   = github,ttaylorr
pythonfile = ~/.offlineimap.py
ui         = ttyui

[Account github]
localrepository  = github-local
remoterepository = github-remote
postsynchook     = mu index -m ~/.mail/github.com

[Repository github-local]
type         = Maildir
localfolders = ~/.mail/github.com
nametrans    = forward_nametrans

[Repository github-remote]
maxconnections = 3
type           = Gmail
sslcacertfile  = /usr/local/etc/openssl/cert.pem
remoteuser     = ttaylorr@github.com
remotepasseval = get_keychain_pass(account="ttaylorr@github.com", server="imap.gmail.com")
realdelete     = no
nametrans      = reverse_nametrans

[Account ttaylorr]
localrepository  = ttaylorr-local
remoterepository = ttaylorr-remote
postsynchook     = mu index -m ~/.mail/ttaylorr.com

[Repository ttaylorr-local]
type         = Maildir
localfolders = ~/.mail/ttaylorr.com
nametrans    = forward_nametrans

[Repository ttaylorr-remote]
maxconnections = 3
type           = Gmail
sslcacertfile  = /usr/local/etc/openssl/cert.pem
remoteuser     = me@ttaylorr.com
remotepasseval = get_keychain_pass(account="me@ttaylorr.com", server="imap.gmail.com")
realdelete     = no
nametrans      = reverse_nametrans
