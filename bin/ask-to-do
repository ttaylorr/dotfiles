#!/usr/bin/env bash

main() {
  local cmd="$1"

  if [ -z "$cmd" ]; then
    echo "usage: ask-to-do <cmd>" >&1
    exit 1
  fi

  while read thing; do
    while true; do
      read -n 1 -p "Do \`$cmd $thing\`? [yn] " < /dev/tty
      if [ ! -z $REPLY ]; then
        echo
      fi

      case $REPLY in
        [yY])
          echo `$cmd $thing`
          break;
          ;;
        [nN])
          break;
          ;;
      esac
    done
  done
}

main "$@";
