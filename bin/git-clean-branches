#!/usr/bin/env bash

main() {
  GIT_ROOT="$(git rev-parse --show-toplevel 2>/dev/null)"

  if [ "$?" -ne "0" ]; then
    echo "fatal: not in a Git repository" >&2
    exit 1
  fi

  pushd "$GIT_ROOT" >/dev/null
    git branch \
      | grep -v "*" \
      | awk '{ print $1 }' \
      | ask-to-do "git branch -D"
  popd >/dev/null
}

main "$@";
